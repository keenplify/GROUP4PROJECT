
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/NavbarAdmin.cshtml";
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <link href="~/Content/Site.css" rel="stylesheet" />


}

<body class="bg-secondary bg-opacity-10">

   
    <div class="container justify-content-center py-3">

        <div class="row">
            <div class="col-lg-6">
                <h4>Sales Performance</h4>
            </div>
            <div class="col-lg-4">
                <div class="input-group flex-nowrap ">
                    <span class="input-group-text bg-white border border-end-0" id="addon-wrapping"><i class="fa-sharp fa-solid fa-magnifying-glass"></i></span>
                    <input type="text" class="form-control border border-start-0" placeholder="Search" aria-label="Search" aria-describedby="addon-wrapping">
                </div>
            </div>

            

        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header border-bottom-0 bg-white pt-4 ps-lg-4">
                    <div class="row">
                        <div class="col-md-8">

                            <h5>Top Selling Product</h5>
                        </div>

                        <div class="col-md-4">

                            <div class="dropdown-menu-end">
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        Monthly
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li><a class="dropdown-item" href="#">Monthly</a></li>
                                        <li><a class="dropdown-item" href="#">Weekly</a></li>

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <canvas class=" p-3 h-25" id="bar"></canvas>
                  
                </div>
            </div>
            <br />
            <br />

        </div>
        <div class="col-sm-3">
            <div class="card">
           
                <div class=" text-center pt-4"><h5>Top Selling Product</h5></div>
                <div class="card-body ">
                    <canvas class="h-25" id="pie"></canvas>
                </div>
            </div>

        </div>
        <div class="col-sm-3">
            <div class="card">
     
                <div class=" text-center pt-4"><h5>Order Todays</h5></div>
                <div class="card-body">
                    <canvas class="h-25" id="Spie"></canvas>

                </div>
            </div>

        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script type="text/javascript">
        var json = `@Html.Raw(ViewBag.Orders)`;
        var orders = JSON.parse(json);

        var barchart = document.getElementById('bar').getContext('2d');
        var mybarchart = new Chart(barchart, {
            type: 'bar',
            data: {
                labels: ['MON1', 'TUE2', 'WED3', 'THU4', 'FRI5', 'SAT6', 'SUN7'],
                datasets: [{
                    label: 'Bar Chart',
                    data: [1000, 200, 400, 600, 800, 300, 900],
                    backgroundColor: '#BC6E19'
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        })

        var piechart = document.getElementById('pie').getContext('2d');
        var mypiechart = new Chart(piechart, {
            type: 'doughnut',
            data: {
                labels: ['001', '002',],
                datasets: [{
                    label: 'doughnut Chart',
                    data: [100, 200],
                    backgroundColor: ['#BC6E19'],




                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        })

        var piechart = document.getElementById('Spie').getContext('2d');
        var mypiechart = new Chart(piechart, {
            type: 'doughnut',
            data: {
                labels: ['001', '002',],
                datasets: [{
                    label: 'Doughnut Chart',
                    data: [100, 200],
                    backgroundColor: '#BC6E19'

                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        })


    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")






</body>
