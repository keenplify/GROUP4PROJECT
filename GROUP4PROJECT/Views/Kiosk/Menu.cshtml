@{
    Layout = "~/Views/Shared/_Blank.cshtml";
}

<html>
<head>
    <title>Kiosk</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/53a2b7f096.js" crossorigin="anonymous"></script>
    <style>
            @@keyframes slideUpFromBottom {
            0% {
                transform: translateY(10%);
                opacity: 0%;
            }
            100% {
                transform: translateY(0);
                opacity: 100%;
            }
            }
            @@keyframes Opacity {
                0% {
                    opacity: 0%;
                }
                100% {
                    opacity: 100%;
                }
            }
            .card {
                animation: 0.3s ease-out 0s 1 slideUpFromBottom;
            }
            #onLoad{
                animation: 0.2s ease-out 0s 1 Opacity;
            }
            @@font-face {
                font-family: Product-Sans-Regular;
                src: url(~/Kiosk/fonts/Product-Sans-Regular.ttf);
            }
            @@font-face {
                font-family: Product-Sans-Bold;
                src: url(~/Kiosk/fonts/Product-Sans-Bold.ttf);
            }
            .fixed-bottom {
                background-color: #BC6E19;
                font-family: Product-Sans-Regular;
            }
            .btn{
                width: 150px;
            }
            a {
            text-decoration: none;
            color: white;
            }
            a:hover{
            color: black;
            }
            h3{
                font-family: Product-Sans-Bold;
            }
            h5{
                font-family: Product-Sans-Regular;
            }
            html {
                scroll-behavior: smooth;
            }
            .d-lg-block img :hover{
                width: 100px;
                height: 100px;
            }
            body{
                background-color: rgba(230,230,230);
            }
    </style>
</head>
<body>
    <!-- NavBar on top-->
    <nav class="navbar navbar-expand-sm bg-dark navbar-light fixed-top" id="onLoad">
        <div class="container-fluid justify-content-center ">
            <img class="navbar-brand img-fluid" src="~/Kiosk/img/Logo-BeanThere-Default.svg" width="99" height="48" ondragstart="return false;">
        </div>
    </nav>
    <!--NavBar on top end-->
    <!--Content-->
    <div class="container-fluid" style="margin-bottom: auto; padding-top: 75px;">
        <!--NavSide-->
        <div class="row">
            <div class="col-sm-1">
                <nav class="navbar-expand-sm ">
                    <ul class="d-md-none d-lg-block nav navbar-nav flex-column" id="onLoad" style="position: fixed;">
                        <li><a href="#coffeeSection"><img class="mt-3" src="~/Kiosk/img/Kiosk-coffeeNav.png" ondragstart="return false;" width="90" height="90"></li></a>
                        <li><a href="#donutSection"><img class="mt-3" src="~/Kiosk/img/Kiosk-donutNav.png" ondragstart="return false;" width="90" height="90"></li></a>
                        <li><a href="#donut&CoffeeSection"><img class="mt-3" src="~/Kiosk/img/Kiosk-donutAndCoffeeNav.png" ondragstart="return false;" width="90" height="90"></li></a>
                    </ul>
                </nav>
                <nav class="navbar-expand-sm ">
                    <ul class="d-none d-md-block d-lg-none nav navbar-nav flex-column" id="onLoad" style="position: fixed;">
                        <li><a href="#coffeeSection"><img class="mt-3" src="~/Kiosk/img/Kiosk-coffeeNav.png" ondragstart="return false;" width="60" height="60"></li></a>
                        <li><a href="#donutSection"><img class="mt-3" src="~/Kiosk/img/Kiosk-donutNav.png" ondragstart="return false;" width="60" height="60"></li></a>
                        <li><a href="#donut&CoffeeSection"><img class="mt-3" src="~/Kiosk/img/Kiosk-donutAndCoffeeNav.png" ondragstart="return false;" width="60" height="60"></li></a>
                    </ul>
                </nav>
            </div>
            <div class="col-sm-11">
                <div class="container-fluid mt-3 ps-3 mb-5">
                    <!--Search Bar-->
                    <div class="input-group w-25 float-start mt-3 ms-2" style="font-family: Product-Sans-Regular;">
                        <span class="input-group-text bg-white border border-end-0 border-0">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </span>
                        <input type="text" class="form-control border-0 border shadow-none border-start-0" id="search" autocomplete="off">
                    </div>
                    <!--End Search Bar-->
                    <!--Coffee Section-->
                    <div id="coffeeSection" class="container-fluid" style="padding:75px 20px;">
                        <h3>Coffee</h3>
                        <div class="row">
                            <div class="col-sm-2 card p-2 ms-3 mt-3 d-flex" data-bs-toggle="modal" data-bs-target="#productDescription">
                                <img class="img-fluid d-block mx-auto mb-2 ms-1 me-1 mt-1" src="~/Kiosk/img/Kiosk-Coffee-Selection.png">
                                <div class="text-dark">
                                    <h5 class="card-title">Espresso</h5><br>
                                    <h6 class="align-self-end">120.00</h6>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!--End Coffee Section-->
                    <!--Donut Section-->
                    <div id="donutSection" class="container-fluid" style="padding:75px 20px;">
                        <h3>Donut</h3>
                        <div class="row">
                            <div class="col-sm-2 card p-2 ms-3 mt-3 d-flex" data-bs-toggle="modal" data-bs-target="#productDescription">
                                <img class="img-fluid d-block mx-auto mb-2 ms-1 me-1 mt-1" src="~/Kiosk/img/Kiosk-Donut-Selection.png">
                                <div class="text-dark">
                                    <h5 class="card-title">Donut</h5><br>
                                    <h6 class="align-self-end">120.00</h6>

                                </div>
                            </div>
                        </div>
                    </div>
                    <!--End Coffee Section-->
                    <!--Coffee&Donut Section-->
                    <div id="donut&CoffeeSection" class="container-fluid" style="padding:75px 20px;">
                        <h3>Coffee & Donut</h3>
                        <div class="row">
                            <div class="col-sm-2 card p-2 ms-3 mt-3 d-flex" data-bs-toggle="modal" data-bs-target="#productDescription">
                                <img class="img-fluid d-block mx-auto mb-2 ms-1 me-1 mt-1" src="~/Kiosk/img/Kiosk-CoffeeDonut-Selection.png">
                                <div class="text-dark">
                                    <h5 class="card-title">Coffee & Donut</h5><br>
                                    <h6 class="align-self-end">240.00</h6>

                                </div>
                            </div>
                        </div>
                        <!--End Coffee&Donut Section-->

                    </div>
                </div>
            </div>
            <!--NavSide End-->
        </div>
        <!--End Content-->
        <!-- NavBar on bottom-->
        <div class="container-fluid fixed-bottom pt-4 pb-4" id="onLoad">
            <div class="container">
                <div class="row d-flex align-items-center">
                    <div class="col-sm ms-4 me-4">
                        <h5 class="">
                            <a href="~/Kiosk/html/Kiosk_Cart.html"><i class="fa-solid fa-cart-shopping me-3"></i>Tap to view items in cart</a>
                        </h5>
                    </div>
                    <div class="col-sm  ms-4 me-4">
                        <button class="btn btn-dark float-end" type="button" data-bs-toggle="modal" data-bs-target="#cancelConfirmation" style="font-family: Product-Sans-Bold;">Cancel Order</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!--NavBar on bottom end-->
    <!--Modal for Confirmation-->
    <div class="modal fade" id="cancelConfirmation" style="font-family: Product-Sans-Bold;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <h5>Are you sure you want to cancel your order?</h5>
                </div>

                <div class="modal-footer">
                    <a href="~/Kiosk/html/Kiosk_LandingPage.html"><button type="button" class="btn btn-outline-success">Yes</button></a>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
    <!--End Modal for Confirmation-->
    <!--Modal for Product Description-->
    <div class="modal fade" id="productDescription" style="font-family: Product-Sans-Bold;">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    Customize your drink<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-6">
                                <img class="img-fluid d-block mx-auto" src="~/Kiosk/img/Kiosk-Coffee-Selection.png" width="250">
                                <div class="ms-5">
                                    <h6 class="mt-3">Ingredients</h6>
                                    <dl>
                                        <dd>- 1/2 cup ground coffee (French or other dark roast)</dd>
                                        <dd>- 1-1/2 cups cold water</dd>
                                        <dd>- Lemon twists (optional)</dd>
                                    </dl>
                                </div>

                            </div>
                            <div class="col-sm-6">
                                <h1>Espresso</h1>
                                <h3>120.00</h3>
                                <textarea placeholder="Remarks" class="form-control shadow-none mt-3" style="resize:none; height: 150px;"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn text-white" data-bs-dismiss="modal" style="background-color: #BC6E19;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
    <!--End Modal for Product Category-->
</body>
</html>