@{
    Layout = "~/Views/Shared/_Blank.cshtml";
}


<html>
<head>
    <title>Kiosk</title>
    <meta charset="utf-8">
    @*<meta http-equiv="refresh" content="7; URL=./Index" />*@
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/53a2b7f096.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrious/4.0.2/qrious.min.js" integrity="sha512-pUhApVQtLbnpLtJn6DuzDD5o2xtmLJnJ7oBoMsBnzOkVkpqofGLGPaBJ6ayD2zQe3lCgCibhJBi4cj5wAxwVKA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <style>
        @@keyframes slideUpFromBottom {
            0% {
                transform: translateY(10%);
                opacity: 0%;
            }

            100% {
                transform: translateY(0);
                opacity: 100%;
            }
        }

        #onLoadSlideUp {
            animation: 0.3s ease-out 0s 1 slideUpFromBottom;
        }

        body {
            overflow: hidden;
        }
    </style>
</head>
<body class="bg-dark" id="onLoadSlideUp">
    <div class="overflow-hidden d-flex justify-content-center flex-column align-items-center gap-5">
        <img class="img-fluid mx-auto d-block mt-5" src="~/Kiosk/img/Logo-BeanThere-Default.svg" width="150" ondragstart="return false">
        <div style="width: 512px">
            <canvas id="qr"></canvas>
        </div>
        <img class="img-fluid mx-auto d-block mt-5" src="~/Kiosk/img/Kiosk-RecieptPage.png" width="700" ondragstart="return false">

        <script defer>
            function init() {
                try {
                    const items = localStorage.getItem("kioskItems");
                    const orderType = localStorage.getItem("orderType");
                    const customerName = localStorage.getItem("kioskCustomerName");

                    const data = {
                        items: JSON.parse(items),
                        orderType,
                        customerName
                    }

                    const dataJSON = JSON.stringify(data);

                    console.log({ data });
                    var qr = new QRious({
                        element: document.getElementById('qr'),
                        value: dataJSON,
                        size: 512
                    });
                } catch (err) {
                    console.log(err);
                }
            }

            document.onload = init();
        </script>
    </div>
</body>
</html>