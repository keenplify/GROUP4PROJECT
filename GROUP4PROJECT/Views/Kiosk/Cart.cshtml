@{ 
    Layout = "~/Views/Shared/_Blank.cshtml";
}

<html>
<head>
    <title>Kiosk</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/53a2b7f096.js" crossorigin="anonymous"></script>
    <style>
            @@keyframes slideUpFromBottom {
            0% {
                transform: translateY(10%);
                opacity: 0%;
            }
            100% {
                transform: translateY(0);
                opacity: 100%;
            }
            }
            #onLoadSlideUp{
                animation: 0.3s ease-out 0s 1 slideUpFromBottom;
            }
            @@keyframes Opacity {
                0% {
                    opacity: 0%;
                }
                100% {
                    opacity: 100%;
                }
            }
            #onLoad{
                animation: 0.2s ease-out 0s 1 Opacity;
            }
            /*@@font-face {
                font-family: Product-Sans-Regular;
                src: url(~/Kiosk/fonts/Product-Sans-Regular.ttf);
            }
            @@font-face {
                font-family: Product-Sans-Bold;
                src: url(~/Kiosk/fonts/Product-Sans-Bold.ttf);
            }*/
            th{
                /*font-family: Product-Sans-Bold;*/
                font-size: 20px;
            }
            tr{
                /*font-family: Product-Sans-Bold;*/
            }
            #checkoutButton{
                background-color: #BC6E19;
            }
    </style>
</head>
<body>
    <!-- NavBar on top-->
    <nav class="navbar navbar-expand-sm bg-dark navbar-light sticky-top" id="onLoad">
        <div class="container-fluid justify-content-center ">
            <img class="navbar-brand img-fluid" src="~/Kiosk/img/Logo-BeanThere-Default.svg" width="99" height="48" ondragstart="return false;">
        </div>
    </nav>
    <!--NavBar on top end-->


    <div class="container-fluid">
        <div class="row">
            <!--Cart-->
            <div id="onLoad" class="col-sm-9 container-fluid g-0">
                <table class="table table-striped align-middle h-100">
                    <table class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Item</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total Price</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><img class="d-block mx-auto" src="~/Kiosk/img/Kiosk-Coffee-Selection.png" width="125"></td>
                                <td>Espresso</td>
                                <td>x1</td>
                                <td>120.00</td>
                                <td>120.00</td>
                                <td><img class="" src="~/Kiosk/icon/Kiosk_Cart-Remove.svg" width="40" ondragstart="return false;"></td>
                            </tr>
                        </tbody>
                    </table>
            </div>
            <!--End Cart-->
            <!--Cart Info-->
            <div class="col-sm-3 g-0 d-flex flex-column" id="onLoadSlideUp" style="height:calc(100vh - 75px)">
                <div class="text-bg-light pt-3 pb-2" >
                    <h3 class="text-center"><i class="fa-solid fa-cart-shopping me-3"></i>Cart</h3>
                </div>
                <div class=" text-bg-dark ps-2 pe-2 flex-grow-1">
                    <table class="text-bg-dark table table-borderless" style="height: 375px;">
                        <tbody>
                            <tr>
                                <td>Total Item(s):</td>
                                <td>1</td>
                            </tr>
                            <tr>
                                <td>Total Price:</td>
                                <td>120.00</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="pb-2 d-grid gap-2 mx-auto">
                        <td><a href="../html/Kiosk_Menu.html" class="btn btn-success">Add more</a></td>
                        <td><a href="../html/Kiosk_ReceiptPage.html" id="checkoutButton" class="btn text-white">Checkout</a></td>
                    </div>
                </div>
            </div>
            <!--End Cart Info-->
        </div>
    </div>

</body>
</html>